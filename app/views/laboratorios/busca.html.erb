<h2>Busca por <%= @termo %></h2>

<% if @equipamentos.any? %>
<h3>Equipamentos</h3>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Função</th>
      <th>Taxa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipamentos.each do |equipamento| %>
      <tr>
        <td><%= equipamento.nome %></td>
        <td><%= equipamento.funcao %></td>
        <td><%= equipamento.taxa %></td>
        <% if (@user == @responsavel) %>
            <td><%= link_to 'Mostrar', [@laboratorio, equipamento] %></td>
            <td><%= link_to 'Editar', edit_laboratorio_equipamento_path(@laboratorio, equipamento) %></td>
            <td><%= link_to 'Deletar', [@laboratorio, equipamento], method: :delete, data: { confirm: 'Confirmar?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h3>Sem equipamentos com o termo</h3>
<% end %>

<% if @servicos.any? %>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Função</th>
      <th>Taxa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicos.each do |servico| %>
      <tr>
        <td><%= servico.nome %></td>
        <td><%= servico.descricao %></td>
        <td><%= servico.taxa %></td>
        <% if (@user == @responsavel) %>
            <td><%= link_to 'Mostrar', [@laboratorio, servico] %></td>
            <td><%= link_to 'Editar', edit_laboratorio_servico_path(@laboratorio, servico) %></td>
            <td><%= link_to 'Deletar', [@laboratorio, servico], method: :delete, data: { confirm: 'Confirmar?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h3>Sem serviços com o termo</h3>
<% end %>

<% if @postagems.any? %>

<table>
  <thead>
    <tr>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postagems.each do |postagem| %>
      <tr>
        <td><%= postagem.texto %></td>
        <td><%= link_to 'Mostrar', postagem %></td>
        <td><%= link_to 'Editar', edit_postagem_path(postagem) %></td>
        <td><%= link_to 'Deletar', postagem, method: :delete, data: { confirm: 'Confirmar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
<h3>Sem postagens com o termo</h3>
<% end %>

<%= link_to 'Voltar', laboratorio_path(@laboratorio) %>