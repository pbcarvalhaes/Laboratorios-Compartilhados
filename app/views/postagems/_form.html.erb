<%= form_with(model: postagem, local: true) do |form| %>
  <% if postagem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(postagem.errors.count, "error") %> prohibited this postagem from being saved:</h2>

      <ul>
      <% postagem.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= form.label :"Título" %>
    <%= form.text_area :titulo %>
  </div>

  <div class="field">
    <%= form.label :"Texto" %>
    <%= form.text_area :texto %>
  </div>

  <div class="field">
    <%= form.label :"Laboratóro" %>
    <% if aluno_signed_in? && current_aluno.laboratorio != nil %>
      <%= form.collection_select :laboratorio_id, Laboratorio.where(id: current_aluno.laboratorio_id), :id, :nome %>
    <% elsif docente_signed_in? %>
      <%= form.collection_select :laboratorio_id, Laboratorio.all, :id, :nome  %>
    <% elsif admin_signed_in? %>
      <%= form.collection_select :laboratorio_id, Laboratorio.all, :id, :nome  %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
