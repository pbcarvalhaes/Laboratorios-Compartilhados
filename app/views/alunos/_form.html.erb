      <%= u.label :email %>
      <%= u.text_field :email %>
    </div>

    <div class="field">
      <%= u.label :password %>
      <%= u.password_field :password %>
    </div>

    <div class="field">
      <%= u.label :password_confirmation %>
      <%= u.password_field :password_confirmation %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nusp %>
    <%= form.number_field :nusp %>
  </div>

  <div class="field">
    <%= form.label :departamento %>
    <%= form.text_field :departamento %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
